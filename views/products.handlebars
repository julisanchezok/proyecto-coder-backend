
<div id="contenedor">
    {{#each products}}
    <div class="card">
        <div class="basicInfo">
            <div class="title">
                <div class="category">{{this.category}}</div>
                <div class="name">{{this.title}}</div>
                
            </div>
            <div class="images">
                <div class="img">
                    <div class="item">
                        <input type="radio" name="color{{@index}}" id="green{{@index}}" checked>
                        <img src="{{this.thumbnails.[0]}}">
                    </div>
                    
                </div>
            </div>
            
        </div>
        <div class="mores">
            <div class="description">
                {{this.description}}
            </div>
            <div class="price">{{this.price}}</div>
            <div class="add-cart">
                <a href="/products/{{this._id}}"> Ver producto </a>
            </div>
        </div>
        
    </div>
    {{/each}}
</div>
